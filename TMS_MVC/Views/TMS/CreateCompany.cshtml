                                <label class="control-label col-md-3">Picture</label>
                                <div class="col-md-12" style="height:150px;">
                                    <img src="~/images/defaultProduct.jpg" width="120" height="120" id="productImage" />
                                    <input type="file" class="form-control" id="btnBrowsePic" onchange="showimagepreview(this);">
                                </div>
                            </div>*@

