                            </div>



                        </div>
                        <div class="modal-footer border-0" style="text-align:center">
                            <span><input type="button" class="btn btn-primary" id="btnsaveOrder" onclick="saveOrUpdates();" value="সেভ করুন"></></span>
                            <span><input type="button" class="btn btn-danger" id="btncen" data-dismiss="modal" value="বাতিল করুন" onclick="clearFromData();"></></span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section scripts{
    <script>

        var fdate;
        var tdate;
        function documentFunc() {
            document.getElementById('fromDateMD').value = fdate;
            document.getElementById('ToDateMD').value = tdate;
        }

        function showimagepreview(input) {
            if (input.files && input.files[0]) {
                var a = (input.files[0].size);
                if (a > 200000) {
                    alert('Photo too large. Maximum allowed size is 200 KB');
                }
                else {
                    //$('#WarningMsg').val('');
                    var filerdr = new FileReader();
                    filerdr.onload = function (e) {
                        $('#productImage').attr('src', e.target.result);
                    }
                    filerdr.readAsDataURL(input.files[0]);
                }
            }
        };

        var selectdataId = 0;
        var mstrPrimaryFields = 0;

        var BranchID = "";
        var BranchName = "";
        $(document).ready(function () {
            $('#btnsaveOrder').val('সেভ করুন');
            showGrid();
            $("#BranchConfig").on('shown.bs.modal', function () {
                $(this).find('#txtbranchName').focus();
            });
            getDate();
            documentFunc();
        })
        function getDate() {
            var date = new Date();

            var day = date.getDate();

            var month = date.getMonth() + 1;
            var year = date.getFullYear() + 1;

            if (month < 10) month = "0" + month;
            if (day < 10) day = "0" + day;
            fdate = year + "-" + month + "-" + "01";
            tdate = year + "-" + month + "-" + day;
            console.log('kib', tdate)
        }

        function ValidationClear() {
            var name = $('#txtbranchName').val();
            if (name.trim() != "") {
                document.getElementById("reqBranchName").innerHTML = "";

            }

        }
        function ChangeLocation() {
            var x = $('#txtbranchName').val() + ' Depot';
            $('#txtlocation').val(x)

        }

        $("#btnsaveItem").click(function () {
            $('#txtcostcategory').val("");
        });
        $("#btnCancel").click(function () {
            $("#Costcategory").modal("hide");
            $('#btnsaveOrder').val('Save');
        });
        $("#btncen").click(function () {
            $("#Costcategory").modal("hide");
            $('#btnsaveOrder').val('Save');
        });
        function saveOrUpdates() {
            //if (checkReqFields() == false) {
            //    return;
            //}
            var btn = $('#btnsaveOrder').val();
            if (btn == "সেভ করুন") {
                swal({
                    title: "Do You Want to Save?",
                    text: "",
                    icon: "warning",
                    buttons: [
                        'Yes',
                        'No'
                    ],
                    dangerMode: true,
                }).then(function (isConfirm) {
                    if (isConfirm) {
                    }
                    else {
                        save();
                        clearFromData();
                        $('#txtbranchName').focus();
                    }

                });


            } else {


                swal({
                    title: "Do You Want to Update?",
                    text: "",
                    icon: "warning",
                    buttons: [
                        'Yes',
                        'No'
                    ],
                    dangerMode: true,
                }).then(function (isConfirm) {
                    if (isConfirm) {

                    }
                    else {

                        Update(mstrPrimaryFields);
                        clearFromData();
                        $('#btncen').click();

                    }

                });
            }

        }
        function checkVariable(variable) {

            if (variable == null) {
                return "1";
            }
            else {
                return "2";
            }
        }

        function toTitleCase(str) {
            return str.replace(
              /\w\S*/g,
              function (txt) {
                  return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();
              }
            );
        }
        function save() {

            var empObj = {
                strUSER_NAME: $("#txtUserName").val(),
                strUSER_PASSWORD: $("#txtPassword").val(),
                strMOBILE_NUMBER: $("#txtmobile").val(),
                strEMAIL_ADDRES: $("#txtEmailAddress").val(),
                strFACEBOOK_ID: $("#txtFACEBOOK_ID").val(),
                strLICENCE_START_DATE: $("#fromDateMD").val(),
                strLICENCE_END_DATE: $("#ToDateMD").val(),
                strUSER_STATUS: $('#cboInactive option:selected').val(),
            };
            console.log(empObj);
            $.ajax({

                url: "/UserInfo/SaveUserInfo",
                type: "POST",
                data: JSON.stringify(empObj),
                contentType: "application/json;charset=utf-8",
                dataType: "json",

                success: function (result) {

                    if (result == "OK") {
                        //console.log('save')

                        var toastMixin = Swal.mixin({
                            toast: true,
                            icon: 'success',
                            title: 'General Title',
                            animation: false,
                            //position: 'top-right',
                            position: 'center',
                            showConfirmButton: false,
                            timer: 2000,
                            timerProgressBar: true,
                        });
                        toastMixin.fire({
                            animation: true,
                            title: 'Save Successfully',
                        });
                        showGrid();
                        clearFromData();


                    } else {
                        swal("Warning!", result);
                        //clearFromData();
                    };
                }
            });

        }
        function Update() {
            var empObj = {
                intOldUSER_ID: $("#txtOldbranchID").val(),
                strUSER_NAME: $("#txtUserName").val(),
                strUSER_PASSWORD: $("#txtPassword").val(),
                strMOBILE_NUMBER: $("#txtmobile").val(),
                strEMAIL_ADDRES: $("#txtEmailAddress").val(),
                strFACEBOOK_ID: $("#txtFACEBOOK_ID").val(),
                strLICENCE_START_DATE: $("#fromDateMD").val(),
                strLICENCE_END_DATE: $("#ToDateMD").val(),
                strUSER_STATUS: $('#cboInactive option:selected').val(),
            };
            console.log(empObj);
            $.ajax({

                url: "/UserInfo/UpdateUserInfo",
                type: "POST",
                data: JSON.stringify(empObj),
                contentType: "application/json;charset=utf-8",
                dataType: "json",

                success: function (result) {

                    if (result == "OK") {
                        //console.log('save')

                        var toastMixin = Swal.mixin({
                            toast: true,
                            icon: 'success',
                            title: 'General Title',
                            animation: false,
                            //position: 'top-right',
                            position: 'center',
                            showConfirmButton: false,
                            timer: 2000,
                            timerProgressBar: true,
                        });
                        toastMixin.fire({
                            animation: true,
                            title: 'Save Successfully',
                        });
                        showGrid();
                        clearFromData();


                    } else {
                        swal("Warning!", result);
                        //clearFromData();
                    };
                }
            });

        }
        function showGrid() {


            table = $('#datatable4').DataTable({
                "bDestroy": true,
                "select": true,
                //"gridlines": true,
                "ajax": {
                    "url": "/UserInfo/mFillShowGrid",
                    "type": "POST",
                    "datatype": "json",

                    "dataSrc": function (response) {

                        detailsList = response;
                        response.draw = response.draw;
                        response.recordsTotal = response.recordsTotal;
                        response.recordsFiltered = response.recordsFiltered;
                        return response;
                    }

                },

                "columns": [


                      {
                          title: 'SL',
                          render: function (
                              data,
                              type,
                              row,
                              meta
                          ) {
                              return '<span>' + (meta.row + 1) + '</span>';
                          },
                      },

                        {
                            title: 'ব্যবহারকারী Status',
                            data: 'intUSER_STATUS',
                            name: 'Branch ID',
                            visible: false,
                        },
                        {
                            title: 'ব্যবহারকারী আইডি',
                            data: 'intUSER_ID',
                            name: 'Branch ID',
                            visible: false,
                        },
                        {
                            title: 'ব্যবহারকারীর নাম',
                            data: 'strUSER_NAME',
                            name: 'Branch ID',
                        },
                        {
                            title: 'পাসওয়ার্ড',
                            data: 'strUSER_PASSWORD',
                            name: 'Branch ID',
                        },
                        {
                            title: 'মোবাইল নাম্বার ',
                            data: 'strMOBILE_NUMBER',
                            name: 'Branch ID',
                        },
                        {
                            title: 'ইমেইল এড্রেস',
                            data: 'strEMAIL_ADDRES',
                            name: 'Branch ID',
                        },
                        {
                            title: 'ফেইচবুক  আইডি',
                            data: 'strFACEBOOK_ID',
                            name: 'Branch ID',
                        },
                        {
                            title: 'স্ট্রাট তারিখ:',
                            data: 'strLICENCE_START_DATE',
                            name: 'Branch ID',
                        },
                        {
                            title: 'শেষ তারিখ',
                            data: 'strLICENCE_END_DATE',
                            name: 'Branch ID',
                        },

                        {
                            title: 'একটিভ:',
                            data: 'strUSER_STATUS',
                            name: 'Branch ID',
                        },
                        {
                            "data": "intBranchStatus", "autowidth": true,
                            "render": function (intBranchStatus) {
                                if (intBranchStatus == 1) {
                                    return "In Active";
                                }
                                else {
                                    return "Active";
                                }

                            }
                        },


                                 {
                                     title: 'Edit',

                                     render: function (data, type, row) {
                                         return '<button class="btn btn-info fontsize  sales-sloat-ak"  data-toggle="modal" data-target="#UserConfig">   <i class="fa fa-pencil"></i></button>';
                                     }
                                 },
                                  {
                                      title: 'Delete',
                                      render: function (data, type, row) {
                                          return '<button class="btn btn-danger fontsize delete-sloat-ak">   <i class="fa fa-trash"></i></button>';
                                      }
                                  },


                ],

                "responsive": true,
                "rowCallback": function (row, data) {
                    var rowdata = data;

                    $(row).find(".sales-sloat-ak").click(function () {
                        selectdata = data;
                        //console.log('hello edit dddeeeee', selectdata);
                        //saveorupdatebtntype =1;
                        edit(selectdata);

                    });
                    $(row).find(".delete-sloat-ak").click(function () {
                        selectdata = data;
                        deleteBranch(selectdata);

                    });
                    $(row).find(".print-sloat-ak").click(function () {
                        selectdata = data;
                        orderprint(selectdata.strVoucherNoMerz, selectdata.strMerzeName)

                    });

                }

            });

        }
        function edit(data) {

            $('#btnsaveOrder').val('আপডেট করুন ');
            $('#txtOldbranchID').val(data.intUSER_ID);
            $('#txtUserName').val(data.strUSER_NAME);
            $("#txtPassword").val(data.strUSER_PASSWORD);
            $("#txtmobile").val(data.strMOBILE_NUMBER);
            $("#txtEmailAddress").val(data.strEMAIL_ADDRES);
            $("#txtFACEBOOK_ID").val(data.strFACEBOOK_ID);
            $("#fromDateMD").val(data.strLICENCE_START_DATE);
            $("#ToDateMD").val(data.strLICENCE_END_DATE);
            $('#cboInactive').val(data.intUSER_STATUS).trigger('change');

        }

        function deleteBranch(selectdata) {

            var empObj = {
                intBranchID: (selectdata.intBranchID),
            };
            //console.log('hello ', empObj);
            swal({
                title: "Do You Want to Delete?",
                text: "",
                icon: "warning",
                buttons: [
                    'Yes',
                    'No'
                ],
                dangerMode: true,
            }).then(function (isConfirm) {

                if (isConfirm) {
                }
                else {
                    $.ajax({
                        url: "/BranchEntry/DeleteBranch",
                        type: "POST",
                        data: JSON.stringify(empObj),
                        contentType: "application/json;charset=utf-8",
                        dataType: "json",
                        success: function (result) {

                            if (result == "OK") {
                                showGrid();
                                swal("Delete!", "Delete success.", "success");
                            }
                            else {
                                swal("Warning!", result);
                            };


                        }
                    });
                }

            });



        }

        function checkReqFields() {
            var returnValue;

            var name = document.getElementById("txtbranchName").value;
            returnValue = true;
            if (name.trim() == "") {
                document.getElementById("reqBranchName").innerHTML = " * Name is required.";
                returnValue = false;
            }
            return returnValue;
        }

        function refreshformdata() {
            showGrid();
        }
        function clearFromData() {

            $('#btnsaveOrder').val('সেভ করুন');
            $('#txtOldbranchID').val('');
            $('#txtUserName').val('');
            $("#txtPassword").val('');
            $("#txtmobile").val('');
            $("#txtEmailAddress").val('');
            $("#txtFACEBOOK_ID").val('');
            getDate();
            documentFunc();
            $('#cboInactive').val('').trigger('change');


        }

    </script>
}
















