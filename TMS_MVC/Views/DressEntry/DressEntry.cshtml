@section scripts{
    <script>

        function showimagepreview(input) {
            if (input.files && input.files[0]) {
                var a = (input.files[0].size);
                if (a > 200000) {
                    alert('Photo too large. Maximum allowed size is 200 KB');
                }
                else {
                    //$('#WarningMsg').val('');
                    var filerdr = new FileReader();
                    filerdr.onload = function (e) {
                        $('#productImage').attr('src', e.target.result);
                    }
                    filerdr.readAsDataURL(input.files[0]);
                }
            }
        };

        var selectdataId = 0;
        var mstrPrimaryFields = 0;

        var BranchID = "";
        var BranchName = "";
        $(document).ready(function () {
            $('#btnsaveOrder').val('Save');
            showGrid();
            $("#BranchConfig").on('shown.bs.modal', function () {
                $(this).find('#txtbranchName').focus();
            });
        })
        function ValidationClear() {
            var name = $('#txtbranchName').val();
            if (name.trim() != "") {
                document.getElementById("reqBranchName").innerHTML = "";

            }

        }
        function ChangeLocation() {
            var x = $('#txtbranchName').val() + ' Depot';
            $('#txtlocation').val(x)

        }

        $("#btnsaveItem").click(function () {
            $('#txtcostcategory').val("");
        });
        $("#btnCancel").click(function () {
            $("#Costcategory").modal("hide");
            $('#btnsaveOrder').val('Save');
        });
        $("#btncen").click(function () {
            $("#Costcategory").modal("hide");
            $('#btnsaveOrder').val('Save');
        });
        function saveOrUpdates() {
            if (checkReqFields() == false) {
                return;
            }
            var btn = $('#btnsaveOrder').val();
            if (btn == "Save") {
                swal({
                    title: "Do You Want to Save?",
                    text: "",
                    icon: "warning",
                    buttons: [
                        'Yes',
                        'No'
                    ],
                    dangerMode: true,
                }).then(function (isConfirm) {
                    if (isConfirm) {
                    }
                    else {
                        save();
                        clearFromData();
                        $('#txtbranchName').focus();
                    }

                });


            } else {


                swal({
                    title: "Do You Want to Update?",
                    text: "",
                    icon: "warning",
                    buttons: [
                        'Yes',
                        'No'
                    ],
                    dangerMode: true,
                }).then(function (isConfirm) {
                    if (isConfirm) {

                    }
                    else {

                        Update(mstrPrimaryFields);
                        clearFromData();
                        $('#btncen').click();

                    }

                });
            }

        }
        function checkVariable(variable) {

            if (variable == null) {
                return "1";
            }
            else {
                return "2";
            }
        }

        function toTitleCase(str) {
            return str.replace(
              /\w\S*/g,
              function (txt) {
                  return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();
              }
            );
        }
        function save() {
            //alert(toTitleCase($('#txtbranchName').val()));
            var fd = new FormData();
            var files = $('input[type="file"]')[0].files;
            for (var i = 0; i < files.length; i++) {
                fd.append("Picture", files[i]);
            }
            fd.append("Name", $('#txtEmpName').val());
            var empObj = {
                BranchName: toTitleCase($('#txtbranchName').val()),
                BranchAddress1: toTitleCase($('#txtAddress1').val()),
                BranchAddress2: toTitleCase($('#txtAddress2').val()),
                Country: toTitleCase($('#txtCountry').val()),
                Phone: $('#txtTelephone').val(),
                Fax: toTitleCase($('#txtFax').val()),
                Comments: toTitleCase($('#txtComments').val()),
                Godown: toTitleCase($('#txtlocation').val()),
                Status: $('#cboInactive').val(),
                DefaultBranch: toTitleCase($('#cbodefaultBrach').val()),
                //Status: $('#cboInactive option:selected').text(),
                //Status: $('#cboInactive option:selected').text(),
                //DefaultBranch: $('#cbodefaultBrach option:selected').text(),
            };

            $.ajax({

                url: "/BranchConfig/SaveBranchInfo",
                type: "POST",
                data: JSON.stringify(empObj),
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {

                    if (result == "save") {
                        //console.log('save')

                        var toastMixin = Swal.mixin({
                            toast: true,
                            icon: 'success',
                            title: 'General Title',
                            animation: false,
                            //position: 'top-right',
                            position: 'center',
                            showConfirmButton: false,
                            timer: 2000,
                            timerProgressBar: true,
                        });
                        toastMixin.fire({
                            animation: true,
                            title: 'Save Successfully',
                        });
                        showGrid();
                        clearFromData();


                    } else {
                        swal("Warning!", result);
                        //clearFromData();
                    };
                }
            });

        }
        function Update(id) {
            //alert($('#cboInactive').val())
            var empObj = {
                BranchID: toTitleCase($('#txtOldbranchID').val()),
                BranchName: toTitleCase($('#txtbranchName').val()),
                BranchAddress1: toTitleCase($("#txtAddress1").val()),
                BranchAddress2: toTitleCase($('#txtAddress2').val()),
                Country: toTitleCase($("#txtCountry").val()),
                Phone: toTitleCase($('#txtTelephone').val()),
                Fax: toTitleCase($("#txtFax").val()),
                Comments: toTitleCase($('#txtlocation').val()),
                Status: $('#cboInactive').val(),
                Godown: toTitleCase($('#txtlocation').val()),
                Status: $('#cboInactive').val(),
                DefaultBranch: toTitleCase($('#cbodefaultBrach').val()),
                Comments: toTitleCase($('#txtComments').val())

                //Status: $('#cboInactive option:selected').text(),
                //DefaultBranch: $('#cbodefaultBrach option:selected').text(),
                //DefaultBranch: "NO",

            };

            $.ajax({
                url: "/BranchConfig/mUpdateBranchInfo",
                type: "POST",
                data: JSON.stringify(empObj),
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {

                    if (result == "Update") {
                        //console.log('Update')

                        var toastMixin = Swal.mixin({
                            toast: true,
                            icon: 'success',
                            title: 'General Title',
                            animation: false,
                            position: 'center',
                            showConfirmButton: false,
                            timer: 2000,
                            timerProgressBar: true,
                        });
                        toastMixin.fire({
                            animation: true,
                            title: 'Update Successfully',

                        });

                        showGrid();
                        clearFromData();


                    } else {
                        swal("Warning!", result, '');
                        clearFromData();
                    };
                }
            });

        }
        function showGrid() {


