        function edit(data) {

            ////alert(data.DefaultBranch)
            $('#btnsaveOrder').val('Update');

            $('#txtOldbranchID').val(data.BranchID);
            $('#txtbranchName').val(data.BranchName);
            $("#txtAddress1").val(data.BranchAddress1);
            $('#txtAddress2').val(data.BranchAddress2);
            $("#txtCountry").val(data.Country);
            $('#txtTelephone').val(data.Phone);
            $('#txtlocation').val(data.Godown);
            $("#txtFax").val(data.Fax);
            $('#cboInactive').val(data.Status);
            $('#cbodefaultBrach').val(data.DefaultBranch);
            ////$('#txtlocation').val(data.Comments);
            //$("#cbodefaultBrach").val(data.);

            //if (data.Status == "NO") {
            //    $("#cboInactive").val("0");
            //}
            //else {
            //    $("#cboInactive").val("1");
            //}

            $('#txtComments').val(data.Comments);



        }

        function deleteBranch(selectdata) {

            var empObj = {
                BranchID: (selectdata.BranchID),
                BranchName: (selectdata.BranchName),
            };
            //console.log('hello ', empObj);
            swal({
                title: "Do You Want to Delete?",
                text: "",
                icon: "warning",
                buttons: [
                    'Yes',
                    'No'
                ],
                dangerMode: true,
            }).then(function (isConfirm) {

                if (isConfirm) {
                }
                else {
                    $.ajax({
                        url: "/BranchConfig/DeleteBranchInfo",
                        type: "POST",
                        data: JSON.stringify(empObj),
                        contentType: "application/json;charset=utf-8",
                        dataType: "json",
                        success: function (result) {

                            if (result == "OK") {
                                showGrid();
                                swal("Delete!", "Delete success.", "success");
                            }
                            else {
                                swal("Warning!", result);
                            };


                        }
                    });
                }

            });



        }

        function checkReqFields() {
            var returnValue;

            var name = document.getElementById("txtbranchName").value;
            returnValue = true;
            if (name.trim() == "") {
                document.getElementById("reqBranchName").innerHTML = " * Name is required.";
                returnValue = false;
            }
            return returnValue;
        }

        function refreshformdata() {
            showGrid();
        }
        function clearFromData() {

            $('#btnsaveOrder').val('Save');
            selectdataId = 0;

            $('#txtGroupName').val('')
            $("#cboUnder").prop("selectedIndex", '0').val();
            $("#cboNature").prop("selectedIndex", '0').val();
            $("#cbocashflow").prop("selectedIndex", '0').val();

            document.getElementById("reqBranchName").innerHTML = "";
            $('#txtOldbranchID').val('');
            $('#txtbranchName').val('');
            $("#txtAddress1").val('');
            $('#txtAddress2').val('');
            $("#txtCountry").val('Bangladesh');
            $('#txtTelephone').val('');
            $("#txtFax").val('');
            $('#txtlocation').val('');
            $("#cbodefaultBrach").prop("selectedIndex", '0').val();
            $("#cboInactive").prop("selectedIndex", '0').val();
            $('#txtComments').val('');

        }

    </script>
}




