                            },
                                {
                                    title: 'সিরিয়াল',
                                    data: 'Phone',
                                    name: 'Phone',
                                    "visible": false,
                                },
                                 {
                                     title: 'ডিলিট করুন',
                                     data: 'Fax',
                                     name: 'Fax',
                                     "visible": false,
                                 },
                                 
                                 {
                                     title: 'Edit',

                                     render: function (data, type, row) {
                                         return '<button class="btn btn-info fontsize  sales-sloat-ak"  data-toggle="modal" data-target="#BranchConfig">   <i class="fa fa-pencil"></i></button>';
                                     }
                                 },
                                  {
                                      title: 'Delete',
                                      render: function (data, type, row) {
                                          return '<button class="btn btn-danger fontsize delete-sloat-ak">   <i class="fa fa-trash"></i></button>';
